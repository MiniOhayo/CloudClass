<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="2dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:focusableInTouchMode="false"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="140dp"
            android:layout_height="85dp"
            android:contentDescription="@string/app_name"
            android:padding="1dp"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/item_img"
            android:padding="3dp" >

            <TextView
                android:id="@+id/show_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="红楼梦详解"
                android:textColor="@color/tutor_detail_title"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/show_content_tutor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_name"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="王小帅"
                android:textColor="@color/tutor_detail_info"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/show_content_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/show_content_tutor_name"
                android:gravity="center"
                android:singleLine="true"
                android:text="高级讲师"
                android:textColor="@color/tutor_detail_info"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>